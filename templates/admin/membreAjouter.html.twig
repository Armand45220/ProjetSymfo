<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1." />
    <title>Ajout partenaire</title>
    <link href="{{ asset('static/css/app.css') }}" rel="stylesheet"/>
</head>
<body>
<!-- formulaire pour ajouter un membre avec un hypertext de type balloon -->
<h1 class="title_bo">Ajouter un membre</h1>
<div id="part_form" style="margin-top: 50px;display: flex;flex-direction: column;align-items: center;">
    {{ form_start(form) }}

    <p>Nom du membre :</p>
    {{ form_row(form.nom_membre) }}
    <div id="editorNomMembre" style="border: solid 1px"></div>
    <p>Description du membre :</p>
    {{ form_row(form.desc_membre) }}
    <div id="editorDescMembre" style="border: solid 1px"></div>
    {{ form_row(form.image) }}


    <input type="hidden" name="{{ form.fichier_id.vars.full_name }}" id="{{ form.fichier_id.vars.id }}" value="{{ form.fichier_id.vars.value }}" />

    {{ form_end(form) }}
</div>
<div class="back_path">
    <a href= {{ path('membreAffiche') }}>Retour</a>
</div>
</body>
<!-- les lien pour le formulaire en hypertext -->
{% block javascripts %}
    <script src="{{ asset('ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('js/ckeditor.js') }}"></script>
{% endblock %}
</html>