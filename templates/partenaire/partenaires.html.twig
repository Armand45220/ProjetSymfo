{% extends 'base.html.twig' %}

{% block content_right %}
    <div class="part_flex">
        {% for partenaire in partenaire %}
            <div class="right-section part_right">
                <div class="partenaire">
                    <img src= {{ asset (partenaire.fichierPart.cheminFichier) }}  alt="Mon image" class="img_part">
                    <h2>{{ partenaire.nomPart }}</h2>
                    <button type="button" class="btn btn-warning btn_part" data-bs-toggle="modal" data-bs-target="#modalPart-{{partenaire.id}}">En savoir plus</button>

                    <!-- Modal affichant la description des partenaires -->
                    <div class="modal fade" id="modalPart-{{partenaire.id}}" tabindex="-1" aria-labelledby="ModalPartLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalPartLabel">{{partenaire.nomPart}}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {{partenaire.descPart}} </br>
                                    <a href = "{{partenaire.lienPart}}" target="_blank"> {{partenaire.lienPart}}</a>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
